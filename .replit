modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BiomeAI Bot Server"

[[workflows.workflow]]
name = "BiomeAI Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m pip install discord.py PyPDF2 python-dotenv sqlalchemy psycopg2-binary pgvector && python main.py"]
deploymentTarget = "gce"
ignorePorts = true

[[ports]]
localPort = 5000
externalPort = 80
